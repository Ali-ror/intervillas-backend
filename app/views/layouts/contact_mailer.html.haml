      table { margin: 0; border-collapse: collapse; }
      tr { margin: 2px 0 2px 0; }
      td, th { padding: 0 5px 0 0; }
      table.table td, table.table th { padding: 2px 4px 2px 4px; vertical-align: top; text-align: left }
      a, a:visited { color: #50878e }
      p { margin: 0 0 6px 0 }

