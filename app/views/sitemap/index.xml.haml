<?xml version="1.0" encoding="UTF-8"?>
%urlset{ "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" }
  %url
    %loc= root_url
  %url
    %loc= villas_url

  - @pages.each do |page|
    %url
      %loc= root_url + page.route.path
      %lastmod= page.updated_at.to_date

  - @villas.each do |villa|
    %url
      %loc= villa_url(villa)
