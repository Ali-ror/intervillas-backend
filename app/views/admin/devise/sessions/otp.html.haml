- content_for :title do
  = t "devise.two_factor.sign_in"

- content_for :footer do
  %p.text-muted.mb-0
    = fa :question_circle
    = t "devise.two_factor.help"

= render layout: "admin/devise/panel" do
  = semantic_form_for resource, url: session_path(resource_name), method: :post do |f|
    = f.input :otp_attempt, label: t("devise.two_factor.otp"), required: true, input_html: { autofocus: true, autocomplete: "one-time-code" }
    = f.action :submit, label: t("devise.two_factor.confirm"), button_html: { class: "btn btn-primary", data: { disable_with: t(:wait) } }
