- content_for :title do
  = t "devise.sessions.sign_in"

= render layout: "admin/devise/panel" do
  = semantic_form_for resource, url: session_path(resource_name) do |f|
    = f.input :email,       required: true, input_html: { autocomplete: "username", autofocus: true }
    = f.input :password,    required: true, input_html: { autocomplete: "current-password" }
    = f.input :remember_me, as: :boolean if devise_mapping.rememberable?

    = f.action :submit, label: t("devise.sessions.sign_in"), button_html: { class: "btn btn-primary", data: { disable_with: t(:wait) } }
