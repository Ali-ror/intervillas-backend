.row
  = semantic_form_for [:admin, basic_contact_form], html: { class: "form-horizontal col-sm-12 col-md-8" } do |f|
    = f.hidden_field :form_id, id: nil, name: "form"

    = f.inputs "Anschrift" do
      = f.input :gender, collection: {"Herr" => "m", "Frau" => "f", "Firma" => "c"}
      = f.input :company_name
      = f.input :first_name
      = f.input :last_name
      = f.input :address
      = f.input :city
      = f.input :zip
      = f.input :country
      = f.input :phone

    .form-group
      .form-label
      .form-wrapper
        = f.action :submit, label: "Speichern", button_html: { data: { disable_with: t(:wait) }, class: "btn btn-primary" }
