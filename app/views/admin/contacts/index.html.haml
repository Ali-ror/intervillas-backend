.pull-right.mt-3
  = link_to new_admin_contact_path, class: "btn btn-success" do
    = fa :plus, text: "neuer Kontakt"

%ul.nav.nav-tabs.mt-3
  %li
    = link_to "Benutzer-Zugänge", admin_users_path
  %li.active
    = link_to "Eigentümer und Verwaltungen", admin_contacts_path

%ul.nav.nav-tabs.mt-3
  %li.active
    = link_to t("admin.users.active"), { anchor: "active" }, class: "nav-link", data: { toggle: "tab" }
  %li
    = link_to t("admin.users.inactive"), { anchor: "inactive" }, class: "nav-link", data: { toggle: "tab" }

.tab-content
  #active.tab-pane.active
    = render "table", contacts: collection.active

  #inactive.tab-pane
    = render "table", contacts: inactive_contacts
