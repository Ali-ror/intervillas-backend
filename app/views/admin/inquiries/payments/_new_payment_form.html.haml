= semantic_form_for payment_form, url: [:admin, inquiry, payment_form, anchor: "payments"], html: { class: "form-horizontal" } do |form|
  = form.input :paid_on,  as: :simple_date_picker
  = form.input :sum,      as: :number,  input_html: { step: 0.01 }
  = form.input :scope,    as: :select,  collection: payment_scopes_for_select
  = form.input :comment,  as: :text

  = form.actions do
    = form.action :submit, label: t("admin.bookings.payments.new_payment_form.save"), button_html: { class: "btn btn-primary" }
    - if controller_name == "payments" && %w[edit create].include?(action_name)
      = link_to t("admin.bookings.payments.new_payment_form.cancel"), [:edit, :admin, inquiry.booking, anchor: "payments"], class: "btn btn-default"
