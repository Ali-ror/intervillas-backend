.row.mt-5
  .col-xl-4.col-xl-offset-4.col-md-6.col-md-offset-3
    - if backup_codes = session.delete(:otp_backup_codes)
      = render "backup_codes", backup_codes: backup_codes
    - elsif current_user.otp_required_for_login?
      = render "deactivate"
    - elsif current_user.otp_secret?
      = render "confirm"
    - else
      = render "create"
